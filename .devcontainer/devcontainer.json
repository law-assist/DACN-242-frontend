{
	// Dev container name
	"name": "law assist frontend dev environment",
	// Build Dockerfile for dev container, rebuild when add new tools to dev container
	"build": {
		"dockerfile": "Dockerfile",
		"options": ["--tag=dacn-242-frontend-dev"]
	},
	// Or use a pre-built image on local dev container, uncomment to pull dev image
	// If so, DON'T COMMIT THAT CHANGE!!
	// "image": "lawassist/frontend:dev-latest"
	
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [29002],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "npm install --legacy-peer-deps",

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"dbaeumer.vscode-eslint",
				"burkeholland.simple-react-snippets",
				"dsznajder.es7-react-js-snippets",
				"EQuimper.react-native-react-redux",
				"syler.sass-indented",
				"eamodio.gitlens",
				"ecmel.vscode-html-css",
				"ms-vscode.vscode-typescript-next"
			]
		}
	}
}
